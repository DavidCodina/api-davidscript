{
  "name": "api-davidscript",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\" \"npm run add-public-and-views-to-dist\" \"nodemon --delay 0.25\")",
    "start": "node dist/index.js",
    "add-public-and-views-to-dist": "cp -r src/public src/views dist",
    "build": "rimraf dist && tsc && tsc-alias && npm run add-public-and-views-to-dist",
    "test": "vitest",
    "test:verbose": "vitest --reporter verbose",
    "test:run": "vitest --run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  }
}
